    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="nav-collapse collapse">
            <ul class="nav">

            </ul>
          </div>
        </div>
      </div>
    </div>

        <header class="jumbotron subhead">
          <div class="container">
            <h1>Bible References</h1>
            <p class="lead">Browse cultural biblical references, collected by Saul Shanabrook
          </div>
        </header>
        <div class="container">
            <div class="row">
                <div class="span3 bs-docs-sidebar">
                    <ul class="nav nav-list bs-docs-sidenav">
                        {% set book = 'init' %}
                        {% for ref in refs %}
                            {% if ref.book != book %}
                                {% set book = ref.book %}
                                <li><a href="#{{ ref.book|lower }}"><i class="icon-chevron-right"></i> {{ ref.book|title }}</a></li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>

                <div class="span9">
                    {% set book = 'init' %}
                    {% for ref in refs %}
                        {% if ref.book != book %}
                            <section id="{{ ref.book|lower }}">
                                <div class="page-header">
                                    <h1>{{ ref.book|title }}</h1>
                                </div>
                        {% endif %}
                                <h3>{{ ref.source }}</h3>
                                {% if ref.text %}<div class="well">{{ ref.text }}</div>{% endif %}
                                {% if ref.image %}
                                    <ul class="thumbnails">
                                        <li class="span9">
                                            <div class="thumbnail">
                                                <img src="{{ ref.image }}" alt="">
                                            </div>
                                        </li>
                                    </ul>
                                {% endif %}
                                {% if ref.quote %}
                                    <blockquote>
                                      <p>{{ ref.quote }}</p>
                                      <small>{{ ref.passage }} <cite title="{{ ref.book }}">{{ ref.book }}</cite></small>
                                    </blockquote>
                                {% endif %}
                                {% if ref.expln %}
                                    <p>{{ ref.expln }}
                                {% endif %}
                        {% if ref.book != book %}
                            </section>
                            {% set book = ref.book %}
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </body>
</html>